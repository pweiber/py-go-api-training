                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "pm.test('Admin registered successfully', function () {",
                            "    const responseJson = pm.response.json();",
                            "    pm.expect(responseJson.email).to.eql('admin@example.com');",
                            "    pm.expect(responseJson.role).to.eql('admin');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"testpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/login",
                    "host": ["{{base_url}}"],
                    "path": ["login"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Token received', function () {",
                            "    const responseJson = pm.response.json();",
                            "    pm.expect(responseJson.access_token).to.exist;",
                            "    pm.expect(responseJson.token_type).to.eql('bearer');",
                            "    pm.globals.set('user_token', responseJson.access_token);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Login Admin",
