                            "    const responseJson = pm.response.json();",
                            "    pm.globals.set('admin_token', responseJson.access_token);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Get Current User Profile",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{user_token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/me",
                    "host": ["{{base_url}}"],
                    "path": ["me"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
