{
    "info": {
        "name": "Task 2 - Authentication & User Management",
        "description": "Test collection for authenticated Book Store API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"testpassword123\",\n    \"role\": \"user\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/register",
                    "host": ["{{base_url}}"],
                    "path": ["register"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "pm.test('User registered successfully', function () {",
                            "    const responseJson = pm.response.json();",
                            "    pm.expect(responseJson.email).to.eql('user@example.com');",
                            "    pm.expect(responseJson.role).to.eql('user');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Register Admin",
            "request": {
                "method": "POST",
